<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'delete', dose_path(dose), method: 'delete', class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>

<h1>New Dose</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description, input_html: {class: 'p-2'} %>
  <%= f.association :ingredient, input_html: {class: 'select2 p-2'} %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
