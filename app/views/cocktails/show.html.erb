<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'delete', dose_path(dose), method: 'delete', class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>

<%= link_to '+ dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
